= form_for @user_decorator do |f|
  - if @user_decorator.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_decorator.errors.count, "error")} prohibited this user_decorator from being saved:"
      %ul
        - @user_decorator.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :family_name
    = f.text_field :family_name
  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'
