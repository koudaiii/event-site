%div.page-header
  %h1
    = @event.name

%div.row
  %div.col-md-8
    %div.panel.panel-default
      %div.panel-heading
        主催者
      %div.panel-body
        = link_to "https://twitter.com/#{@event.owner.nickname}" do
          = image_tag @event.owner.image_url
          = "@#{@event.owner.nickname}"
    %div.panel.panel-default
      %div.panel-heading
        開催時間
      %div.panel-body
        = @event.start_time.strftime('%Y/%m/%d %H:%M')
        \-
        = @event.end_time.strftime('%Y/%m/%d %H:%M')
    %div.panel.panel-default
      %div.panel-heading
        開催場所
      %div.panel-body
        = @event.place
    %div.panel.panel-default
      %div.panel-heading
        イベント内容
      %div.panel-body
        = @event.content
  %div.col-md-4
    - if @event.created_by?(current_user)
      = link_to 'イベントを編集する', edit_event_path(@event), class: 'btn btn-info btn-lg btn-block'
      = link_to 'イベントを削除する', event_path(@event), class: 'btn btn-danger btn-lg btn-block', method: :delete, data: {  confirm: '本当に削除しますか?' }
    - if logged_in?
      %button.btn.btn-primary.btn-lg.btn-block{"data-target": "#createTicket", "data-toggle": "modal"}
        参加する
      %div.modal.fade{ id: 'createTicket', tabindex: '-1', role: 'dialog', "aria-labelledby": 'dialogHeader', 'aria-hidden': 'true' }
